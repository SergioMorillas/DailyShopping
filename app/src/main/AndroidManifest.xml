<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaCompra"
        tools:targetApi="31">
        <activity
            android:name=".vista.PrincipalListas"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vista.CreadorListas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.ComparadorProductos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.BuscadorProductos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.ListaEspecifica"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.JuegoPrecios"
            android:screenOrientation="portrait" />
        <activity
            android:name=".vista.PrincipalListasBusqueda"
            android:screenOrientation="portrait" />


    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>